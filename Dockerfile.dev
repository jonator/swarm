ARG ELIXIR_VERSION=1.18.2
ARG OTP_VERSION=27.2.4
ARG DEBIAN_VERSION=bullseye-20250224-slim

ARG BUILDER_IMAGE="hexpm/elixir:${ELIXIR_VERSION}-erlang-${OTP_VERSION}-debian-${DEBIAN_VERSION}"

FROM ${BUILDER_IMAGE} AS dev

# Install development dependencies including asdf prerequisites
RUN apt-get update -y && apt-get install -y \
    build-essential \
    git \
    inotify-tools \
    sudo \
    coreutils \
    bash \
    passwd \
    adduser \
    procps \
    curl \
    wget \
    ca-certificates \
    findutils \
    grep \
    sed \
    gawk \
    tar \
    gzip \
    zip \
    unzip \
    jq \
    sqlite3 \
    tree \
    file \
    less \
    psmisc \
    net-tools \
    # asdf prerequisites
    autoconf \
    automake \
    autotools-dev \
    libncurses5-dev \
    libtool \
    pkg-config \
    zlib1g-dev \
    libssl-dev \
    libreadline-dev \
    libyaml-dev \
    libsqlite3-dev \
    libxml2-dev \
    libxslt1-dev \
    libcurl4-openssl-dev \
    libffi-dev \
    libbz2-dev \
    && apt-get clean && rm -f /var/lib/apt/lists/*_*

# Create swarm-agents group for user management
# This group is used to manage permissions for all Swarm AI agent users
# Using GID 1001 for consistency across deployments
RUN groupadd --gid 1001 swarm-agents

# Install gh
RUN (type -p wget >/dev/null || (apt update && apt install wget -y)) \
    && mkdir -p -m 755 /etc/apt/keyrings \
    && out=$(mktemp) && wget -nv -O$out https://cli.github.com/packages/githubcli-archive-keyring.gpg \
    && cat $out | tee /etc/apt/keyrings/githubcli-archive-keyring.gpg > /dev/null \
    && chmod go+r /etc/apt/keyrings/githubcli-archive-keyring.gpg \
    && mkdir -p -m 755 /etc/apt/sources.list.d \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
    && apt update \
    && apt install gh -y

# Create shared asdf data directory accessible by swarm-agents group
RUN mkdir -p /opt/asdf && \
    chgrp -R swarm-agents /opt/asdf && \
    chmod -R g+rw /opt/asdf

# Install asdf to shared location
RUN git clone https://github.com/asdf-vm/asdf.git /opt/asdf/.asdf --branch v0.14.1

# Set custom asdf data directory and paths
ENV ASDF_DATA_DIR=/opt/asdf
ENV ASDF_DIR=/opt/asdf/.asdf
ENV HOME=/root
ENV PATH="/opt/asdf/.asdf/bin:/opt/asdf/shims:$PATH"

# Add asdf to PATH and shell initialization for all users
RUN echo 'export ASDF_DATA_DIR="/opt/asdf"' >> ~/.bashrc && \
    echo 'export ASDF_DIR="/opt/asdf/.asdf"' >> ~/.bashrc && \
    echo 'export PATH="/opt/asdf/.asdf/bin:/opt/asdf/shims:$PATH"' >> ~/.bashrc && \
    echo '. /opt/asdf/.asdf/asdf.sh' >> ~/.bashrc && \
    echo '. /opt/asdf/.asdf/completions/asdf.bash' >> ~/.bashrc && \
    # Add system-wide asdf configuration
    echo 'export ASDF_DATA_DIR="/opt/asdf"' >> /etc/bash.bashrc && \
    echo 'export ASDF_DIR="/opt/asdf/.asdf"' >> /etc/bash.bashrc && \
    echo 'export PATH="/opt/asdf/.asdf/bin:/opt/asdf/shims:$PATH"' >> /etc/bash.bashrc && \
    echo '. /opt/asdf/.asdf/asdf.sh' >> /etc/bash.bashrc && \
    echo '. /opt/asdf/.asdf/completions/asdf.bash' >> /etc/bash.bashrc && \
    # Also add to skeleton for new users
    echo 'export ASDF_DATA_DIR="/opt/asdf"' >> /etc/skel/.bashrc && \
    echo 'export ASDF_DIR="/opt/asdf/.asdf"' >> /etc/skel/.bashrc && \
    echo 'export PATH="/opt/asdf/.asdf/bin:/opt/asdf/shims:$PATH"' >> /etc/skel/.bashrc && \
    echo '. /opt/asdf/.asdf/asdf.sh' >> /etc/skel/.bashrc && \
    echo '. /opt/asdf/.asdf/completions/asdf.bash' >> /etc/skel/.bashrc && \
    # Create system-wide profile script for asdf
    echo '#!/bin/bash' > /etc/profile.d/asdf.sh && \
    echo 'export ASDF_DATA_DIR="/opt/asdf"' >> /etc/profile.d/asdf.sh && \
    echo 'export ASDF_DIR="/opt/asdf/.asdf"' >> /etc/profile.d/asdf.sh && \
    echo 'export PATH="/opt/asdf/.asdf/bin:/opt/asdf/shims:$PATH"' >> /etc/profile.d/asdf.sh && \
    echo '. /opt/asdf/.asdf/asdf.sh 2>/dev/null || true' >> /etc/profile.d/asdf.sh && \
    chmod +x /etc/profile.d/asdf.sh && \
    # Create wrapper script for asdf with environment variables
    echo '#!/bin/bash' > /usr/local/bin/asdf && \
    echo 'export ASDF_DATA_DIR="/opt/asdf"' >> /usr/local/bin/asdf && \
    echo 'export ASDF_DIR="/opt/asdf/.asdf"' >> /usr/local/bin/asdf && \
    echo 'export PATH="/opt/asdf/.asdf/bin:/opt/asdf/shims:$PATH"' >> /usr/local/bin/asdf && \
    echo '. /opt/asdf/.asdf/asdf.sh' >> /usr/local/bin/asdf && \
    echo 'exec /opt/asdf/.asdf/bin/asdf "$@"' >> /usr/local/bin/asdf && \
    chmod +x /usr/local/bin/asdf

# Install asdf plugins
RUN . /opt/asdf/.asdf/asdf.sh && \
    asdf plugin add nodejs https://github.com/asdf-vm/asdf-nodejs.git && \
    asdf plugin add python https://github.com/asdf-community/asdf-python.git && \
    asdf plugin add golang https://github.com/asdf-community/asdf-golang.git && \
    asdf plugin add ruby https://github.com/asdf-vm/asdf-ruby.git && \
    asdf plugin add bun https://github.com/cometkim/asdf-bun.git && \
    asdf plugin add deno https://github.com/asdf-community/asdf-deno.git && \
    asdf plugin add rust https://github.com/asdf-community/asdf-rust.git

# Install latest versions of tools
RUN . /opt/asdf/.asdf/asdf.sh && \
    asdf install nodejs latest && \
    asdf install python latest && \
    asdf install golang latest && \
    asdf install ruby latest && \
    asdf install bun latest && \
    asdf install deno latest && \
    asdf install rust latest

# Prepare app directory
WORKDIR /app

# Install hex + rebar
RUN mix local.hex --force && \
    mix local.rebar --force

# Set development environment
ENV MIX_ENV=dev

COPY . .

RUN mix deps.get && mix deps.compile

# EPMD port for node discovery
EXPOSE 4369

# Use iex with 
# docker run -it --rm --name swarmdev \
#   --publish 127.0.0.1:4369:4369 \
#   --publish 9000-9010:9000-9010 \
#   --publish 4000:4000 \
#   --env NODE_SNAME=swarmdev \
#   --env SECRET_KEY_BASE=test \
#   --env RELEASE_COOKIE=test \
#   --env RELEASE_NODE=swarmdev \
#   --network host \
#   swarmdev:latest
# to debug with repl
CMD ["iex", "--sname", "swarmdev", "--cookie", "test", "-S", "mix"]
# CMD ["elixir", "--sname", "swarmdev", "--cookie", "test", "-S", "mix", "phx.server"]